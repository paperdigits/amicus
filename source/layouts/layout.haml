    %title
      = data.page.title
      ||
      =site_title

    %meta{:name => "description", :content => site_description }
    %meta{:name => "author", :content => site_author }
    %meta{:content => site_keywords, :name => "keywords"}
    %meta{:content => site_language, :name => "language"}
